    },
    {
      "zone_id": "68de8996b78657a4ab281c37",
      "duration": "18m"
    }
  ]
}

### Get Morning Water Routine by ID
GET    {{host}}/water_routines/691f1b2385d5734d35cd7669

### Delete Evening Water Routine by ID
DELETE    {{host}}/water_routines/691f1ca86457257971bc05de

### Run a Water Routine by ID
POST   {{host}}/water_routines/691f1b2385d5734d35cd7669/run